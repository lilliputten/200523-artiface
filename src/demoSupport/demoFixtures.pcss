.demoIndex {
  &-Title {
    font-size: $(fontSizeXxl)px;
  }
}

.FixtureTitle {
  // border-top: 1px solid $neutralLightColor;
  margin: 10px 0;
  padding: 2px 8px;
  font-size: $(fontSizeLg)px;
  background-color: $neutralLightColor;
}

.FixturesContents {
  &-List {
    display: block;
    padding-left: 0;
    margin: 10px 0;
    padding-bottom: 10px;
    &_root {
    }
    &_subitems {
      font-size: $(defaultFontSize)px;
      margin-left: -8px;
      margin-right: -8px;
    }
  }
  &-Item {
    &Title {
      padding: 2px 8px;
      background-color: $neutralLightColor;
      display: block;
      // font-size: $(fontSizeLg)px;
    }
    list-style-type: none;
    a {
      text-decoration: none;
      color: $defaultTextColor;
      &:hover {
        text-decoration: underline;
      }
    }
    &_root {
      // border-top: 1px solid $neutralLightColor;
      // padding-top: 15px;
    }
    &_subitem {
      display: inline-block;
      padding: 2px 8px;
    }
  }
}
