{
  "compilerOptions": {

    "moduleResolution": "node",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "./src",
    "paths": {
      "demo": ["demo/"], "demo/*": ["demo/*"],
      "config": ["config/"], "config/*": ["config/*"],
      "elements": ["elements/"], "elements/*": ["elements/*"],
      "forms": ["forms/"], "forms/*": ["forms/*"],
      "utils": ["utils/"], "utils/*": ["utils/*"],
      "helpers": ["helpers/"], "helpers/*": ["helpers/*"]
    },

    "pretty": true
  },
  "include": [
    "src/custom.d.ts",
    "src/test.ts",
    "src/**/*"
  ]
}
